<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ManageMyAccount">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:orientation="vertical">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@mipmap/myaccount"
           android:scaleType="centerCrop"
           />
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="8dp"
           android:elevation="8dp"
           android:backgroundTint="@color/purple_500"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="MyAccount"
               android:gravity="center"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:textSize="35dp"/>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="350dp"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   >
                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/myImage"
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:layout_margin="10dp"
                       android:elevation="10dp"
                       android:src="@drawable/usericon"
                       />


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"

                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:text="Name :"
                           android:padding="5dp"
                           android:textColor="@color/black"
                           android:textStyle="bold"/>
                       <TextView
                           android:id="@+id/MyName"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:text="Name"
                           android:padding="5dp"
                           android:textColor="@color/purple_500"
                           android:textStyle="bold"/>
                   </LinearLayout>



                   <LinearLayout
                       android:layout_width="match_parent"

                       android:layout_height="wrap_content"
                       android:minWidth="200dp"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:text="Email :"
                           android:padding="5dp"
                           android:textColor="@color/black"
                           android:textStyle="bold"/>
                       <TextView
                           android:id="@+id/myEmail"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:text="Name@email.com"
                           android:padding="5dp"
                           android:textColor="@color/purple_500"
                           android:textStyle="bold"/>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"

                       android:layout_height="wrap_content"
                       android:minWidth="200dp"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:text="Role :"
                           android:padding="5dp"
                           android:textColor="@color/black"
                           android:textStyle="bold"/>
                       <TextView
                           android:id="@+id/MyRole"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:layout_height="wrap_content"
                           android:text="Role"
                           android:padding="5dp"
                           android:textColor="@color/purple_500"
                           android:textStyle="bold"/>
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:gravity="center"
                       android:layout_height="wrap_content"
                       android:minWidth="200dp"
                       android:orientation="horizontal">
                       <Button
                           android:id="@+id/btnEditProfile"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:text="Edit Details"
                           android:padding="15dp"
                           android:elevation="5dp"
                           android:layout_margin="5dp"
                           android:textColor="@color/black"
                           android:backgroundTint="@color/white"
                           android:background="@drawable/btnshape"
                           android:textStyle="bold"/>
                       <Button
                           android:id="@+id/btnChangePwd"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:elevation="5dp"
                           android:layout_margin="5dp"
                           android:layout_height="wrap_content"
                           android:text="Change Password"
                           android:padding="15dp"
                           android:textColor="@color/white"
                           android:background="@drawable/btnshape"
                           android:backgroundTint="@color/purple_500"
                           android:textStyle="bold"/>
                   </LinearLayout>
                   <Button
                       android:id="@+id/btnMyApplications"
                       android:layout_width="match_parent"
                       android:gravity="center"
                       android:layout_margin="5dp"
                       android:elevation="5dp"
                       android:layout_height="wrap_content"
                       android:text="View My Applications"
                       android:padding="5dp"
                       android:textColor="@color/white"
                       android:background="@drawable/btnshape"
                       android:backgroundTint="@color/purple_500"
                       android:textStyle="bold"/>
               </LinearLayout>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
   </LinearLayout>


</androidx.core.widget.NestedScrollView>