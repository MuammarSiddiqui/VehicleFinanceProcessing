<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:fillViewport="true"
        app:cardCornerRadius="10dp"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:minWidth="300dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/twHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwdLayout"
                app:endIconMode="password_toggle"
                app:helperText="Enter Your Old Password"
                app:counterMaxLength="20"
                app:boxStrokeColor="@color/purple_500"
                app:counterEnabled="true"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/password"
                app:hintTextColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Enter Your Old Password"

                >

                <EditText
                    android:id="@+id/olgPassword"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_500" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/newpwdLayout"
                app:endIconMode="password_toggle"
                app:helperText="Enter Your New Password"
                app:counterMaxLength="20"
                app:boxStrokeColor="@color/purple_500"
                app:counterEnabled="true"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/password"
                app:hintTextColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Enter Your New Password"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/CnewpwdLayout"
                    app:endIconMode="password_toggle"
                    app:helperText="Confirm New Password"
                    app:counterMaxLength="20"
                    app:boxStrokeColor="@color/purple_500"
                    app:counterEnabled="true"
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/password"
                    app:hintTextColor="@color/purple_500"
                    android:textColorHint="@color/purple_500"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Confirm New Password"

                    >

                    <EditText
                        android:id="@+id/CnewPassword"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_500" />

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/newPassword"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_500" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textColor="@color/purple_500"
                        android:background="@drawable/btnshape"
                        android:elevation="15dp"
                        android:backgroundTint="@color/white"
                        android:text="Cancel"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnChangePwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@drawable/btnshape"
                        android:padding="15dp"
                        android:elevation="15dp"
                        android:backgroundTint="@color/purple_500"
                        android:text="Update Details"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>