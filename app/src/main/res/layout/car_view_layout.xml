<?xml version="1.0" encoding="utf-8"?>

 <ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:maxHeight="500dp"
    android:minHeight="300dp"
     android:fillViewport="true"
     android:padding="8dp"
     android:layout_height="wrap_content">
 <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:minWidth="300dp"
      android:gravity="center"
      android:scrollbarAlwaysDrawVerticalTrack="true"
      android:layout_height="wrap_content"
      >
   <androidx.cardview.widget.CardView
       android:layout_width="wrap_content"
       app:cardCornerRadius="8dp"
       app:cardElevation="5dp"
       app:cardUseCompatPadding="true"
       android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/SingleCarViewImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:padding="15dp"
        android:src="@mipmap/car"
        android:scaleType="fitCenter"/>
   </androidx.cardview.widget.CardView>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:minWidth="200dp"
       android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Name :"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/SingleCarViewName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Name"
        android:padding="5dp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"/>
   </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:minWidth="200dp"
       android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Milage :"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/SingleCarViewMilage"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Milage"
        android:padding="5dp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:minWidth="200dp"
       android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Fuel Type:"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/SingleCarViewType"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Type"
        android:padding="5dp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"/>
   </LinearLayout>


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:minWidth="200dp"
       android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Price:"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/SingleCarPrice"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Price"
        android:padding="5dp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"/>
   </LinearLayout>


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:minWidth="200dp"
       android:gravity="center"
       android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Description:"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/SingleCarDescription"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Car Description"
        android:padding="5dp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"/>
   </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:minWidth="200dp"
       android:gravity="center"
       android:layout_marginTop="15dp"
       android:orientation="horizontal">
    <Button
        android:id="@+id/btnSingleCarCancel"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:padding="5dp"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/white"
        android:background="@drawable/btnshape"
        android:backgroundTint="@color/purple_500"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnSingleCarDelete"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@drawable/btnshape"
        android:backgroundTint="#FF0000"
        android:textStyle="bold"/>
   </LinearLayout>

  </LinearLayout>
</androidx.cardview.widget.CardView>
 </ScrollView>
